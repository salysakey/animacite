<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="172dp"
             android:background="@drawable/drawer_upper_background"
             android:orientation="vertical"
             android:paddingTop="10dp"
             android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/avatarhomme"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="5dp"
        android:elevation="4dp"
        android:visibility="gone"
        android:src="@drawable/photo_profil_homme_blanc"/>

    <ImageView
        android:id="@+id/avatarfemme"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="5dp"
        android:elevation="4dp"
        android:visibility="gone"
        android:src="@drawable/photo_profil_femme_blanc"/>
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:elevation="4dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/logofeuch"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/user_email"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="Bonjour!"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
    <TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:text="Connectez-vous :)"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

</RelativeLayout>