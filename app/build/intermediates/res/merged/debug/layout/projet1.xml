<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/panel_content"
    android:layout_width="match_parent"
    android:background="#d9d4d4"
    android:layout_height="@dimen/taille_tuille"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    >


    <TextView
        android:paddingLeft="2dp"
        android:layout_centerInParent="true"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/taille_titre"
        android:textStyle="bold"
        android:text="name"
        android:visibility="gone"
        android:background="@color/info_bar" />

    <TextView
        android:paddingLeft="2dp"
        android:layout_centerInParent="true"
        android:id="@+id/name2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/taille_titre"
        android:textStyle="bold"
        android:text="name"
        android:background="@color/consultation_bar"/>
    <TextView
        android:paddingLeft="2dp"
        android:layout_centerInParent="true"
        android:id="@+id/name_alerte"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/taille_titre"
        android:textStyle="bold"
        android:text="name"
        android:background="@color/info_bar"
        android:drawableRight="@drawable/ic_alerte"
        android:drawablePadding="2dp"
        android:paddingRight="5dp"
        />
    <TextView
        android:paddingLeft="2dp"
        android:layout_centerInParent="true"
        android:id="@+id/name_commerce"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/taille_titre"
        android:textStyle="bold"
        android:text="name"
        android:background="@color/commerce_bar"
        />



    <com.etsy.android.grid.util.DynamicHeightImageView
    android:id="@+id/picture"
    android:layout_gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    />

    <TextView
        android:padding="2dp"
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/textBackground"
        android:visibility="gone"
        android:textStyle="italic"
        android:text="Small Text"
        android:textSize="@dimen/taille_resume"
        />


    <TextView
        android:padding="5dp"
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Small Text"
        android:textColor="#000000"
        android:textSize="@dimen/taille_resume"
        android:background="@color/textBackground" />


</LinearLayout>